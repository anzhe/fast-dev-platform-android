<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_base_backcolor"
        android:orientation="vertical" >

        <include layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/tv_guid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/entrust_tv1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/un_entrust"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/app_primary_color"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/app_primary_color" />
                </LinearLayout>

                <TextView
                    android:id="@+id/submit_entrust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="提交委托"
                    android:textColor="@color/text_color_grey_light_03"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_guid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/app_primary_color" />

                    <TextView
                        android:id="@+id/entrust_tv2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/un_entrust"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/app_primary_color"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/app_primary_color" />
                </LinearLayout>

                <TextView
                    android:id="@+id/wait_entrust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="等待接单"
                    android:textColor="@color/text_color_grey_light_03"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_guid3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/app_primary_color" />

                    <TextView
                        android:id="@+id/entrust_tv3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/un_entrust"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/app_primary_color"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/app_primary_color" />
                </LinearLayout>

                <TextView
                    android:id="@+id/select_entrust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="选择律师"
                    android:textColor="@color/text_color_grey_light_03"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_guid4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/app_primary_color" />

                    <TextView
                        android:id="@+id/entrust_tv4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/un_entrust"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/app_primary_color"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/end_entrust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="委托完成"
                    android:textColor="@color/text_color_grey_light_03"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line_bottom" />

        <FrameLayout
            android:id="@+id/case_entrust_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_customer_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/customer_service_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:text="客服"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>