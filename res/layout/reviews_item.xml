<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_base_backcolor"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lawyer_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lawyer_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/no_avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/lawyer_chat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lawyer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lawyer_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/lchat_bac"
                    android:lineSpacingExtra="3dp"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lawyer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_base_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/user_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/item_bac"
                        android:lineSpacingExtra="3dp"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/evaluate_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/item_bac"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="采纳"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已评价"
                                android:textColor="@color/app_primary_color"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="专业水平"
                                    android:textColor="@color/text_color_grey_dark_02" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <ImageView
                                        android:id="@+id/rate_star_11"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_12"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_13"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_14"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_15"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/rate_star_02" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="职业素养"
                                    android:textColor="@color/text_color_grey_dark_02" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <ImageView
                                        android:id="@+id/rate_star_21"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_22"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_23"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_24"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_25"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/rate_star_02" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="响应速度"
                                    android:textColor="@color/text_color_grey_dark_02" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <ImageView
                                        android:id="@+id/rate_star_31"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_32"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_33"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_34"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_35"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/rate_star_02" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="总体评价"
                                    android:textColor="@color/text_color_grey_dark_02" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                    <ImageView
                                        android:id="@+id/rate_star_41"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_42"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_43"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_44"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/rate_star_02" />

                                    <ImageView
                                        android:id="@+id/rate_star_45"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/rate_star_02" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/user_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textColor="@color/text_base_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/user_chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/user_chat" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/no_avatar" />
    </LinearLayout>

</LinearLayout>