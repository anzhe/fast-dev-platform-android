<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:id="@+id/tv_guid1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_iv1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/focus_btn1" />

            <TextView
                android:id="@+id/home_tv1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="首 页"
                android:textColor="@color/text_color_blue"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_guid2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_iv2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/unfocus_btn2" />

            <TextView
                android:id="@+id/home_tv2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="热 门"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_guid3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_iv3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/unfocus_btn3" />

            <TextView
                android:id="@+id/home_tv3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="发 现"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_guid4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_iv4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/unfocus_btn4" />

            <TextView
                android:id="@+id/home_tv4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="我 的"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>