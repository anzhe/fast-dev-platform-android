<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="SmallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/smallrating_bac</item>
        <item name="android:minHeight">19dip</item>
        <item name="android:maxHeight">19dip</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bac</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

    <style name="MyTheme.FullscreenAppTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyTheme.LoadingPage" parent="MyTheme.FullscreenAppTheme">
        <item name="android:windowBackground">@drawable/loading_img</item>
    </style>

    <style name="MyTheme.ActionBar" parent="Theme.AppCompat">
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="MyTheme.ActionBar.Light" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="MyTheme.ActionBar.Translucent" parent="Theme.AppCompat">
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="MyTheme.ActionBar.Light.Translucent" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="MyTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="MyTheme.NoActionBar.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="MyTheme.NoActionBar.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="MyTheme.NoActionBar.Light.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>